<div id="delete-wrapper">
    <section class="delete">
        <form action="/delete/{{id}}" method="POST">
            <article>
                <h4>Do you want to delete this item?</h4>
                <div class="box">
                    <p>{{title}}</p>
                </div>
                <div class="box">
                    <p class="description">{{comments}}</p>
                </div>
                <button type="submit">Delete</button>
                <a href="/">Cancel</a>
            </article>
        </form>
    </section>
</div>